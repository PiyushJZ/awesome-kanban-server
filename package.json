{
  "name": "awesome-kanban-server",
  "version": "0.0.1",
  "description": "Server for the kanban application",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && pnpm exec tsc",
    "preserve": "pnpm build",
    "serve:development": "pnpm preserve && NODE_ENV=dev concurrently \"pnpm exec tsc -w\"  \"nodemon dist/index.js\"",
    "serve:production": "pnpm preserve && NODE_ENV=prod node dist/index.js"
  },
  "keywords": [
    "kanban",
    "server",
    "typescript",
    "mongodb"
  ],
  "author": "Piyush Jain",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2",
    "morgan": "^1.10.0",
    "node-appwrite": "^9.0.0",
    "rimraf": "^5.0.1",
    "socket.io": "^4.6.1"
  }
}
